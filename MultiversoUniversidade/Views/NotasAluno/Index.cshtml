
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/NotasAlunoJS.js?v=4"></script>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<link rel="stylesheet" href="~/Content/Site.css">
<style>
    .btn-space {
        margin-left: -5%;
        background-color: cornflowerblue;
        font-size: large;
    }


    .center {
        margin: auto;
        width: 60%;
        padding: 10px;
    }

    
</style>
</br>
<div ng-app="myApp">
    <div class="loading-spiner-holder" data-loading style=" margin: auto;width: 100%;height: 100%;padding: 10px;"><div class="loading-spiner" style=" margin: auto;width: 100%;height: 100%;padding: 10px;"><img src="~/Images/Atomos.gif" /></div></div>
    <div ng-controller="myCtrl" ng-init="getCursos()" class="divList">





        @*------------------Model Novo Editar-*@
        <modal title=" " visible="showModal" id="Modal" class="modal fade bd-example-modal-xl">
            <div class="form-horizontal" role="form">
                <div class="modal-dialog modal-xl">
                    <div class="row">
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Data:</label>


                                <input id="data" class="form-control" type="date" date-model="dataReg">


                            </div>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Aluno:</label>
                                <div class="col-md-4 control-label">
                                    <input type="text" placeholder="nome" id="nome" ng-model="nome" readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*------------------------------------------------Professores------------------------------------*@
                
                     <div class="row">
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <div class="filter_subtitle">

                                    <h3 class="mu-text-blue">
                                        Escolha o Professor
                                    </h3>
                                </div>
                                <div class="filter_subtitle">
                                    <select ng-model="selectProf" ng-options="prof.nome for prof in professores" ng-change="setSelectProf(selectProf) "></select>
                                </div>


                            </div>
                        </div>

                    </div>
                    @*------------------------------------------------Professores------------------------------------*@
                    <div class="row">
                        <table cellpadding="3" class="table table-bordered table-condensed" style="width:90%">
                            <tbody ng-submit="doneEditing">
                                <tr>

                                    <td>
                                        <b>Disciplina</b>
                                    </td>
                                    <td>
                                        <b>Digite a Nota</b>
                                    </td>

                                        

                                </tr>
                                <tr ng-repeat="disciplinasAluno in DisciplinasAluno">

                                    <td style="width:80%">
                                        {{disciplinasAluno.Descricao}}
                                    </td>
                                    <td style="width:20%">

                                        <input value="{{disciplinasAluno.nota }}" ng-model="disciplinasAluno.nota" ng-dblclick="editItem(disciplinasAluno )" style="border:none;">

                                    </td>



                                </tr>
                            </tbody>
                        </table>


                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space" value="Gravar" ng-click="InsertData()" />
                    </div>
                </div>
            </div>

        </modal>
        @*------------------Model Novo Editar-*@
        <div class="w3-card-4">
            <div class="mu-container mu-orange">
                <h2>Notas por Aluno</h2>
            </div>

            <div class="form-horizontal" role="form">
                <div class="mu-container">
                    @*------------------------------------------------Cusros------------------------------------*@
                    <div class="row">
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <div class="filter_subtitle">

                                    <h3 class="mu-text-blue">
                                        Cursos
                                    </h3>
                                </div>
                                <div class="filter_subtitle">
                                    <select ng-model="selectCurso" ng-options="curso.nome for curso in cursos" ng-change="setSelectCurso(selectCurso ) "></select>
                                </div>


                            </div>
                        </div>

                    </div>
                    @*------------------------------------------------Cusros------------------------------------*@


                   


                    @*------------------------------------------------Alunos do Curso------------------------------------*@

                    <p class="divHead">Lista de Alunos</p>
                    <table cellpadding="12" class="table table-bordered table-hover">
                        <tr>

                            <td>
                                <b>Nome</b>
                            </td>
                            <td>
                                <b>Apelido</b>
                            </td>

                            <td></td>

                        </tr>
                        <tr ng-repeat="aluno in lAlunos">

                            <td>
                                {{aluno.nome}}
                            </td>
                            <td>
                                {{aluno.apelido}}
                            </td>


                            <td>
                                <input type="button" class="btn btn-warning" value="Editar Notas" ng-click="EditarNotas(aluno)" />

                            </td>

                        </tr>
                    </table>

                    @*------------------------------------------------Alunos do Curso------------------------------------*@
                </div> @*Conteiner*@

            </div>

        </div>

        @Html.Hidden("id")
        @Html.Hidden("idProfe")
    </div>
</div>


<script>


</script>


